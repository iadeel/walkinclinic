@model WalkInMedicalClinic.WebUI.Models.ClinicalResearchAndTrialsViewModel

@{
    ViewBag.Title = "ClinicResearchAndTrials";
}
<style>
    .fa { display:inline; }
</style>
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Heading and para -->
                <div class="block-heading-two">
                    <h3><span>Clinical Research & Trials</span></h3>
                </div>

                <p>
                    <strong>Clinical Research</strong> measures the safety and effectiveness of medications before it can be prescribed, new medications go through a series of many tests and clinical trials. Clinical research and trials used for prevention, treatment, diagnosis or for relieving symptoms of a disease. Clinical Research is different from clinical practice. In clinical practice one uses established treatments, while in clinical research evidence is collected to establish a treatment.
                </p>

                <p>Patients participation is voluntary and are encouraged to discuss with family & friends. </p>

                <p>We do Clinical Research in the following areas:</p>

                <ul>
                    <li>Diabetes</li>
                    <li>Cholesterol</li>
                    <li>Blood Pressure</li>
                    <li>Stroke Prevention in patients with Atrial Fibrillation </li>
                </ul>
            </div>
        </div>
        <p>Request information about Clinical Trials:</p>
        <div class="alert alert-success hidden" id="contactSuccess">
            <strong>Success!</strong> Your message has been sent to us.
        </div>
        <div class="alert alert-error hidden" id="contactError">
            <strong>Error!</strong> There was an error sending your message.
        </div>
        <div class="contact-form col-md-6">
            <form id="contact-form" role="form" novalidate="novalidate">
                <div class="form-group has-feedback">
                    <label for="name">Name*</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="">
                    <i class="fa fa-user form-control-feedback"></i>
                </div>
                <div class="form-group has-feedback">
                    <label for="email">Email*</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="">
                    <i class="fa fa-envelope form-control-feedback"></i>
                </div>
                <div class="form-group has-feedback">
                    <label for="subject">Subject*</label>
                    <input type="text" class="form-control" id="subject" name="subject" placeholder="">
                    <i class="fa fa-navicon form-control-feedback"></i>
                </div>
                <div class="form-group has-feedback">
                    <label for="message">Message*</label>
                    <textarea class="form-control" rows="6" id="message" name="message" placeholder=""></textarea>
                    <i class="fa fa-pencil form-control-feedback"></i>
                </div>
                <input type="submit" value="Submit" class="btn btn-default">
            </form>
        </div>
        <div class="row">
        </div>
    </div>
</section>